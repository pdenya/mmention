<div class="container">
	<h1>Recommended League of Legends videos</h1>
	<div class="row">
		<% @references.each do |ref| %>
			<div class="col-sm-6">
				<iframe width="420" height="315" src="<%= ref.video.embed_url %>" frameborder="0" allowfullscreen></iframe>
				<p><%= link_to "#{ref.count} mentions", show_video_path(ref.video.id)  %></p>
				<p><a href="<%= ref.video.url %>" target="_blank"><%= ref.video.url %></a></p>
			</div>
		<% end %>
	</div>
</div>